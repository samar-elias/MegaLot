<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginTop="@dimen/_10sdp">
    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/place"
        android:textColor="@color/green"
        android:fontFamily="@font/aller_bold"
        android:textSize="@dimen/_10ssp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_winning_amount"
        android:textColor="@color/dark_green"
        android:fontFamily="@font/aller_regular"
        android:textSize="@dimen/_6ssp"
        android:layout_marginTop="@dimen/_5sdp"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/winning_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aller_bold"
            android:text="2564.56"
            android:textColor="@color/orange"
            android:textSize="@dimen/_23ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/aller_bold"
            android:text="JD"
            android:textColor="@color/orange"
            android:textSize="@dimen/_11ssp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/data_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:orientation="horizontal"
        android:weightSum="2.1">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ticket_orange_icon"/>
            <TextView
                android:id="@+id/winning_tickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:textColor="@color/dark_green"
                android:fontFamily="@font/aller_bold"
                android:textSize="@dimen/_17ssp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_of_winning_tickets"
                android:textColor="@color/dark_green"
                android:fontFamily="@font/aller_regular"
                android:textSize="@dimen/_8ssp"
                android:layout_marginTop="@dimen/_5sdp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/green_line"
            android:layout_gravity="center_vertical"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/winning_amount_orange_icon"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/winning_amount_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="64.56"
                    android:textColor="@color/dark_green"
                    android:fontFamily="@font/aller_bold"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:textSize="@dimen/_17ssp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="JD"
                    android:textColor="@color/dark_green"
                    android:fontFamily="@font/aller_bold"
                    android:textSize="@dimen/_10ssp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/winning_amount_ticket"
                android:textColor="@color/dark_green"
                android:fontFamily="@font/aller_regular"
                android:textSize="@dimen/_8ssp"
                android:layout_marginTop="@dimen/_5sdp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/light_gray2"
        android:layout_marginTop="@dimen/_10sdp"/>
</androidx.appcompat.widget.LinearLayoutCompat>