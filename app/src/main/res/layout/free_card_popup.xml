<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/_35sdp"
    android:layout_marginEnd="@dimen/_35sdp"
    android:background="@drawable/radius10_white"
    android:padding="@dimen/_15sdp">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aller_bold"
        android:gravity="center"
        android:text="@string/mega_lot"
        android:textColor="@color/dark_green"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/close"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/aller_regular"
        android:gravity="center"
        android:text="@string/a_combination_was_auto_generated"
        android:textColor="@color/dark_green"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ticket_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_7sdp">
        <TextView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/gray_circle"
            android:text="14"
            android:fontFamily="@font/aller_regular"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:textColor="@color/dark_gray"
            android:layout_marginEnd="@dimen/_5sdp"/>
        <TextView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/gray_circle"
            android:text="16"
            android:fontFamily="@font/aller_regular"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:textColor="@color/dark_gray"
            android:layout_marginEnd="@dimen/_5sdp"/>
        <TextView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/gray_circle"
            android:text="36"
            android:fontFamily="@font/aller_regular"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:textColor="@color/dark_gray"
            android:layout_marginEnd="@dimen/_5sdp"/>
        <TextView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/gray_circle"
            android:text="52"
            android:fontFamily="@font/aller_regular"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:textColor="@color/dark_gray"
            android:layout_marginEnd="@dimen/_5sdp"/>
        <TextView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/gray_circle"
            android:text="60"
            android:fontFamily="@font/aller_regular"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:textColor="@color/dark_gray"
            android:layout_marginEnd="@dimen/_5sdp"/>
        <TextView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/gray_orange_stroke_circle"
            android:text="16"
            android:fontFamily="@font/aller_regular"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:textColor="@color/orange"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ticket_numbers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_15sdp"
        app:cornerRadius="@dimen/_5sdp"
        android:text="@string/watch_ad_amp_get_10_more"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/white"
        android:fontFamily="@font/aller_bold"
        android:textAllCaps="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>