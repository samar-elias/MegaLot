<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/off_white"
    tools:context=".Views.Main.Home.MyTickets.MyTicketFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_gradient"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingBottom="@dimen/_15sdp">
        <ImageView
            android:id="@+id/navigate_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/back_arrow_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/my_tickets"
            android:textColor="@color/white"
            android:fontFamily="@font/aller_bold"
            android:textSize="@dimen/_16ssp"/>
        <ImageView
            android:id="@+id/excel"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/excel"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/dark_green"
                android:padding="@dimen/_20sdp"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="June 05, 2022"
                    android:fontFamily="@font/aller_bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prize_amount"
                    android:textColor="@color/white"
                    android:fontFamily="@font/aller_regular"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_10sdp"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/prize_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aller_bold"
                        android:text="2564.56"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_27ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/aller_bold"
                        android:text="JD"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_11ssp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/winning_numbers_"
                    android:textColor="@color/white"
                    android:fontFamily="@font/aller_regular"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_7sdp"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginStart="@dimen/_15sdp">
                    <TextView
                        android:id="@+id/no1"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/white_circle"
                        android:text="14"
                        android:fontFamily="@font/aller_regular"
                        android:textSize="@dimen/_12ssp"
                        android:gravity="center"
                        android:textColor="@color/dark_gray"
                        android:layout_marginEnd="@dimen/_5sdp"/>
                    <TextView
                        android:id="@+id/no2"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/white_circle"
                        android:text="16"
                        android:fontFamily="@font/aller_regular"
                        android:textSize="@dimen/_12ssp"
                        android:gravity="center"
                        android:textColor="@color/dark_gray"
                        android:layout_marginEnd="@dimen/_5sdp"/>
                    <TextView
                        android:id="@+id/no3"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/white_circle"
                        android:text="36"
                        android:fontFamily="@font/aller_regular"
                        android:textSize="@dimen/_12ssp"
                        android:gravity="center"
                        android:textColor="@color/dark_gray"
                        android:layout_marginEnd="@dimen/_5sdp"/>
                    <TextView
                        android:id="@+id/no4"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/white_circle"
                        android:text="52"
                        android:fontFamily="@font/aller_regular"
                        android:textSize="@dimen/_12ssp"
                        android:gravity="center"
                        android:textColor="@color/dark_gray"
                        android:layout_marginEnd="@dimen/_5sdp"/>
                    <TextView
                        android:id="@+id/no5"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/white_circle"
                        android:text="60"
                        android:fontFamily="@font/aller_regular"
                        android:textSize="@dimen/_12ssp"
                        android:gravity="center"
                        android:textColor="@color/dark_gray"
                        android:layout_marginEnd="@dimen/_5sdp"/>
                    <TextView
                        android:id="@+id/no6"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/orange_white_stroke_circle"
                        android:text="16"
                        android:fontFamily="@font/aller_regular"
                        android:textSize="@dimen/_12ssp"
                        android:gravity="center"
                        android:textColor="@color/white"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:background="@color/white">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/my_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Username"
                            android:textColor="@color/dark_green"
                            android:fontFamily="@font/aller_regular"
                            android:textSize="@dimen/_11ssp"/>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/data_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/date"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:orientation="horizontal"
                            android:weightSum="2.1">
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">
                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:src="@drawable/ticket_orange_icon"/>
                                <TextView
                                    android:id="@+id/total_tickets"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2,564"
                                    android:textColor="@color/dark_green"
                                    android:fontFamily="@font/aller_bold"
                                    android:textSize="@dimen/_17ssp"
                                    android:layout_marginTop="@dimen/_5sdp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total_tickets"
                                    android:textColor="@color/dark_green"
                                    android:fontFamily="@font/aller_regular"
                                    android:textSize="@dimen/_8ssp"
                                    android:layout_marginTop="@dimen/_5sdp"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:src="@drawable/green_line"
                                android:layout_gravity="center_vertical"/>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">
                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:src="@drawable/winning_ticket_orange_icon"/>
                                <TextView
                                    android:id="@+id/winning_tickets"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="564"
                                    android:textColor="@color/dark_green"
                                    android:fontFamily="@font/aller_bold"
                                    android:textSize="@dimen/_17ssp"
                                    android:layout_marginTop="@dimen/_5sdp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/winning_tickets"
                                    android:textColor="@color/dark_green"
                                    android:fontFamily="@font/aller_regular"
                                    android:textSize="@dimen/_8ssp"
                                    android:layout_marginTop="@dimen/_5sdp"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/google_ad_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dark_green"
                    android:paddingTop="@dimen/_10sdp">
                    <TextView
                        android:id="@+id/free_tickets2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="Free 50 Tickets"
                        android:textColor="@color/white"
                        android:fontFamily="@font/aller_bold"
                        android:textSize="@dimen/_10ssp"/>
                    <TextView
                        android:id="@+id/free_tickets_description2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/free_tickets2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/free_tickets_img2"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="View and Subscribe and instantly get\n50 more Tickets as a gift from us."
                        android:textColor="@color/white"
                        android:fontFamily="@font/aller_regular"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"/>
                    <ImageView
                        android:id="@+id/free_tickets_img2"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/tickets"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:id="@+id/num_tickets2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/free_tickets_img2"
                        app:layout_constraintEnd_toEndOf="@id/free_tickets_img2"
                        app:layout_constraintBottom_toBottomOf="@id/free_tickets_img2"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="+50"
                        android:textColor="@color/brown"
                        android:fontFamily="@font/aller_regular"
                        android:textSize="@dimen/_10ssp"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        app:layout_constraintTop_toBottomOf="@id/free_tickets_description2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:src="@drawable/google_ad"
                        android:scaleType="fitXY"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/results"
                        android:textColor="@color/white"
                        android:fontFamily="@font/aller_bold"
                        android:textSize="@dimen/_10ssp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingBottom="@dimen/_7sdp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/green_gradient2"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp">
                        <androidx.core.widget.NestedScrollView
                            android:id="@+id/nested_SV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/results_RV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:listitem="@layout/my_result_layout"
                                tools:itemCount="7"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                />
                        </androidx.core.widget.NestedScrollView>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.card.MaterialCardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>