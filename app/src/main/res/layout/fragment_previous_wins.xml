<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/off_white"
    tools:context=".Main.PreviousWins.PreviousWinsFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/green_gradient"
        android:padding="@dimen/_20sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/navigate_back"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_20sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/back_arrow_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/previous_wins"
                android:textColor="@color/white"
                android:fontFamily="@font/aller_bold"
                android:textSize="@dimen/_16ssp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp">
            <ImageView
                android:id="@+id/previous_date"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/gray_arrow_previous"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/previous_date"
                app:layout_constraintEnd_toStartOf="@id/next_date"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/date_layout"
                tools:itemCount="1"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"/>
            <ImageView
                android:id="@+id/next_date"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/gray_arrow2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/dark_green"
                android:padding="@dimen/_20sdp"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prize_amount"
                    android:textColor="@color/white"
                    android:fontFamily="@font/aller_regular"
                    android:textSize="@dimen/_10ssp"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/next_draw_prize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aller_bold"
                        android:text="2564.56"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_27ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/aller_bold"
                        android:text="JD"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_11ssp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/winning_numbers_"
                    android:textColor="@color/white"
                    android:fontFamily="@font/aller_regular"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_7sdp"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginStart="@dimen/_15sdp">
                    <TextView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/white_circle"
                        android:text="14"
                        android:fontFamily="@font/aller_regular"
                        android:textSize="@dimen/_12ssp"
                        android:gravity="center"
                        android:textColor="@color/dark_gray"
                        android:layout_marginEnd="@dimen/_5sdp"/>
                    <TextView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/white_circle"
                        android:text="16"
                        android:fontFamily="@font/aller_regular"
                        android:textSize="@dimen/_12ssp"
                        android:gravity="center"
                        android:textColor="@color/dark_gray"
                        android:layout_marginEnd="@dimen/_5sdp"/>
                    <TextView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/white_circle"
                        android:text="36"
                        android:fontFamily="@font/aller_regular"
                        android:textSize="@dimen/_12ssp"
                        android:gravity="center"
                        android:textColor="@color/dark_gray"
                        android:layout_marginEnd="@dimen/_5sdp"/>
                    <TextView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/white_circle"
                        android:text="52"
                        android:fontFamily="@font/aller_regular"
                        android:textSize="@dimen/_12ssp"
                        android:gravity="center"
                        android:textColor="@color/dark_gray"
                        android:layout_marginEnd="@dimen/_5sdp"/>
                    <TextView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/white_circle"
                        android:text="60"
                        android:fontFamily="@font/aller_regular"
                        android:textSize="@dimen/_12ssp"
                        android:gravity="center"
                        android:textColor="@color/dark_gray"
                        android:layout_marginEnd="@dimen/_5sdp"/>
                    <TextView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/orange_circle"
                        android:text="16"
                        android:fontFamily="@font/aller_regular"
                        android:textSize="@dimen/_12ssp"
                        android:gravity="center"
                        android:textColor="@color/white"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>